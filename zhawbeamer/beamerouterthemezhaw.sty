}

%----------------------------------------
%   FOOTLINE
%----------------------------------------
\setbeamertemplate{footline}{
    \leavevmode
    \begin{beamercolorbox}[wd=.333\paperwidth,ht=2.25ex,dp=\@footermargin,left,leftskip=\@footermargin]{lfooter}
        \@lfooter
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=.333\paperwidth,ht=2.25ex,dp=\@footermargin,center]{mfooter}
        \@mfooter
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=.333\paperwidth,ht=2.25ex,dp=\@footermargin,right,rightskip=\@footermargin]{rfooter}
        \insertframenumber{}
    \end{beamercolorbox}
}

